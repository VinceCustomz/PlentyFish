<%- include('../partials/header') %>

    <h1><%= title %></h1>
  
    <table id="front" class="w-100 m-auto centerTable">
      <tr>
        <td class="frontLeft"><img id="frontleft" class="index" src="https://pbs.twimg.com/media/EXVY5FfU0AEgXA0?format=jpg&name=900x900"></td>
        <td><img class="index" src="https://www.planetware.com/photos-large/CDN/ontario-fishing-andersons-lodge.jpg"></td>
        <td class="frontRight"><img id="frontright" class="index" src="https://www.boatus.com/-/media/images/boatus/article-full-width_400-700width/2019/august/man-holding-fish-with-son_lenny-rudow.ashx?h=784&w=700&la=en&hash=05CE19EBD3B82E09FB322F7547C9439D"></td>
      </tr>
    </table>

    <table class="table table-dark table-striped table-hover w-75 m-auto">
      <thead>
        <tr>
          <th>Date</th>
          <th>Species</th>
          <th>Weight</th>
          <th>Length</th>
          <th>Location</th>
          <th>Additional Details</th>
        </tr>
      </thead>
      <tbody>

        <% fishes.forEach(function(f) { %>
            <tr>
              <td><%= f.dateCaught %></td>
              <td><%= f.fishSpecies %></td>
              <td><%= f.weight %> lbs.</td>
              <td><%= f.lengthFish %> in.</td>
              <td><%= f.location %></td>
              <td>
                <button type="button" class="btn btn-secondary">
                  <a href="/fishes/<%= f._id %>">Details</a>
                </button>
              </td>
            </tr>
        <% }); %>
      </tbody>
    </table>

<%- include('../partials/footer') %>