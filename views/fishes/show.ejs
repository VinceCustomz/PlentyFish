<%- include('../partials/header') %>

<h2><%= title %></h2>
<section id="show-page">
    <div>Date Caught:</div>
        <div><%= fish.dateCaught %></div>
    <div>Fish Spice:</div>
        <div><%= fish.fishSpecies %></div>
    <div>Weight:</div>
        <div><%= fish.weight %></div>
    <div>Length:</div>
        <div><%= fish.lengthFish %></div>
    <div>Location:</div>
        <div><%= fish.location %></div>
    <div>Taste Good?</div>
        <div><%= fish.taste %></div>
  </section>
  <br/>
  <br/>
  
  <h2>Comments</h2>
    <table>
      <thead>
        <tr>
          <!-- Table headers -->
          <th>Comment</th> 
          <th>Rating</th>
        </tr>
      </thead>
      <tbody>
        <!-- Table body -->
        <% fish.comments.forEach(function(c) { %>
          <tr>
            <td><%= c.comment %></td>
            <td><%= c.rateCatch %>★</td>
          </tr>
        <% }); %>
      </tbody>
    </table>

  <form id="add-comment-form" method="POST"
    action="/fishes/<%= fish._id %>/comments">
    <br/>
    <label>Comment 
        <input type="text" name="comment"/>
    </label>
    <br/>

    <label>
        Rate Catch
      <select name="rateCatch">
        <option value="1">1 ★</option>
        <option value="2">2 ★</option>
        <option value="3">3 ★</option>
        <option value="4">4 ★</option>
        <option value="5">5 ★</option>
      </select>
      </label>
    <br/>
    <br/>

    <input type="submit" value="Add Comment">
  </form>

<%- include('../partials/footer') %>